import sys
from PySide6.QtWidgets import (
    QApplication, QWidget, QVBoxLayout,
    QPushButton, QMessageBox, QLineEdit, QLabel
)

def on_button_click():
    text = input_box.text()
    if text.strip():
        QMessageBox.information(window, "輸入的內容", f"你輸入了：{text}")
    else:
        QMessageBox.warning(window, "提醒", "請輸入文字！")

app = QApplication(sys.argv)

# 主視窗
window = QWidget()
window.setWindowTitle("Qt6 輸入框範例")
window.resize(300, 160)

# 標籤
label = QLabel("請輸入文字：")

# 輸入框
input_box = QLineEdit()
input_box.setPlaceholderText("在這裡輸入...")

# 按鈕
button = QPushButton("顯示輸入內容")
button.clicked.connect(on_button_click)

# 版面配置
layout = QVBoxLayout(window)
layout.addWidget(label)
layout.addWidget(input_box)
layout.addWidget(button)

window.show()

sys.exit(app.exec())
